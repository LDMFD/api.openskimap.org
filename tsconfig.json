{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "es6",
      "es2015.promise",
      "es2015.collection",
      "dom" /* ArangoJS workaround */
    ],
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["./src/**/*"]
}
